<html>
  <head>
    <title>Marky Markov</title>
  </head>
  <body>
    <button id="refresh">New Info</button>
    <div class="pages-container">
      <h1>Pages</h1>
      <% @pages.each do |page| %>
      <p>
        <%= page.title %>
      </p>
      <% end %>
    </div>
    
    <div class="content-container">
      <h1>Content</h1>
    <% @sentences.each do |sentence| %>
    <p>
      <%= sentence %>
    </p>
    <% end %>
    </div>
  </body>
</html>

     
